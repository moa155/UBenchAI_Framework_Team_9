# InferBench Framework Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# MeluXina Configuration
# =============================================================================
MELUXINA_USER=u103032
MELUXINA_PROJECT=p200776        # Update if different
MELUXINA_PARTITION=gpu          # Options: gpu, cpu, largemem

# =============================================================================
# Framework Settings
# =============================================================================
INFERBENCH_LOG_LEVEL=INFO         # Options: DEBUG, INFO, WARNING, ERROR
INFERBENCH_CONFIG_DIR=./config
INFERBENCH_RECIPES_DIR=./recipes
INFERBENCH_RESULTS_DIR=./results
INFERBENCH_LOGS_DIR=./logs

# =============================================================================
# Container Runtime
# =============================================================================
CONTAINER_RUNTIME=apptainer     # Options: apptainer, singularity
CONTAINER_CACHE_DIR=/path/to/cache
SIF_IMAGES_DIR=/path/to/sif/images

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
METRICS_COLLECTION_INTERVAL=15  # seconds

# =============================================================================
# Web Interface
# =============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false

# =============================================================================
# SLURM Configuration (usually auto-detected)
# =============================================================================
# SLURM_ACCOUNT=your_account
# SLURM_QOS=default
